<% layout('layout', { title: 'Data Records', header: 'Pencatatan SIUIT' }) %>

<table>
  <thead>
    <tr>
      <th>No</th>
      <th>Judul</th>
      <th>Kategori</th>
      <th>Tanggal</th>
    </tr>
  </thead>
  <tbody>
    <% records.forEach((record, index) => { %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= record.title %></td>
        <td><%= record.category %></td>
        <td><%= record.date.toLocaleDateString() %></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<% if (records.length === 0) { %>
  <p>Tidak ada data ditemukan.</p>
<% } %>