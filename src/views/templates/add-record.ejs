<% layout('layout', { title: 'Tambah Data', header: 'Form Pencatatan' }) %>

<form action="/records" method="POST">
  <div class="form-group">
    <label>Judul:</label>
    <input type="text" name="title" required style="width: 100%; padding: 5px;">
  </div>

  <div class="form-group">
    <label>Kategori:</label>
    <select name="category" style="padding: 5px; width: 100%;">
      <option value="keuangan">Keuangan</option>
      <option value="acara">Acara</option>
      <option value="inventaris">Inventaris</option>
    </select>
  </div>

  <div class="form-group">
    <label>Deskripsi:</label>
    <textarea name="description" style="width: 100%; padding: 5px;"></textarea>
  </div>

  <button type="submit" style="padding: 8px 15px; background: #4CAF50; color: white; border: none;">
    Simpan
  </button>
</form>