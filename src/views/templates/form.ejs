<% layout('layout', { title: 'Tambah Pengeluaran' }) %>

<h1><%= error ? 'Koreksi Data' : 'Tambah Pengeluaran' %></h1>

<% if (error) { %>
  <div class="error"><%= error %></div>
<% } %>

<form method="POST">
  <div class="form-group">
    <label>Sumber</label>
    <input 
      type="text" 
      name="sumber" 
      value="<%= data?.sumber || '' %>" 
      required>
  </div>

  <div class="form-group">
    <label>Jumlah (Rp)</label>
    <input 
      type="number" 
      name="jumlah" 
      min="0" 
      value="<%= data?.jumlah || '' %>" 
      required>
  </div>

  <div class="form-group">
    <label>Kategori</label>
    <select name="kategori" required>
      <option value="">Pilih Kategori</option>
      <option value="kebutuhan" <%= data?.kategori === 'kebutuhan' ? 'selected' : '' %>>Kebutuhan</option>
      <option value="hiburan" <%= data?.kategori === 'hiburan' ? 'selected' : '' %>>Hiburan</option>
    </select>
  </div>

  <button type="submit">Simpan</button>
  <a href="/" class="btn-batal">Batal</a>
</form>