<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manajemen Pengeluaran</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            margin-bottom: 20px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        .table-responsive {
            margin-top: 20px;
        }
        .form-group {
            margin-bottom: 15px;
        }
        .total-pengeluaran {
            font-size: 1.2rem;
            font-weight: bold;
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title">Manajemen Pengeluaran</h3>
                    </div>
                    <div class="card-body">
                        <form id="formPengeluaran">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label for="sumber" class="form-label">Sumber Pengeluaran</label>
                                        <input type="text" class="form-control" id="sumber" name="sumber" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="jumlah" class="form-label">Jumlah (Rp)</label>
                                        <input type="number" class="form-control" id="jumlah" name="jumlah" required>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="kategori" class="form-label">Kategori</label>
                                        <select class="form-select" id="kategori" name="kategori" required>
                                            <option value="">Pilih Kategori</option>
                                            <option value="kebutuhan">Kebutuhan</option>
                                            <option value="hiburan">Hiburan</option>
                                            <option value="tagihan">Tagihan</option>
                                            <option value="belanja">Belanja</option>
                                            <option value="lainnya">Lainnya</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary w-100">Tambah</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header bg-success text-white">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title">Daftar Pengeluaran</h3>
                            <div class="total-pengeluaran">
                                Total: Rp <span id="totalPengeluaran">0</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Sumber</th>
                                        <th>Jumlah</th>
                                        <th>Kategori</th>
                                        <th>Tanggal</th>
                                    </tr>
                                </thead>
                                <tbody id="tablePengeluaran">
                                    <!-- Data pengeluaran akan dimuat di sini -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Memuat data pengeluaran saat halaman dimuat
            loadPengeluaran();

            // Menangani submit form
            document.getElementById('formPengeluaran').addEventListener('submit', function(e) {
                e.preventDefault();
                tambahPengeluaran();
            });
        });

        // Fungsi untuk memuat data pengeluaran
        async function loadPengeluaran() {
            try {
                const response = await fetch('/pengeluaran');
                const data = await response.json();
                
                const tableBody = document.getElementById('tablePengeluaran');
                tableBody.innerHTML = '';
                
                let total = 0;
                
                data.forEach((item, index) => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${index + 1}</td>
                        <td>${item.sumber}</td>
                        <td>Rp ${item.jumlah.toLocaleString('id-ID')}</td>
                        <td>${item.kategori}</td>
                        <td>${new Date(item.tanggal).toLocaleDateString('id-ID')}</td>
                    `;
                    tableBody.appendChild(row);
                    
                    total += item.jumlah;
                });
                
                document.getElementById('totalPengeluaran').textContent = total.toLocaleString('id-ID');
            } catch (error) {
                console.error('Error:', error);
                alert('Gagal memuat data pengeluaran');
            }
        }

        // Fungsi untuk menambahkan pengeluaran baru
        async function tambahPengeluaran() {
            const sumber = document.getElementById('sumber').value;
            const jumlah = document.getElementById('jumlah').value;
            const kategori = document.getElementById('kategori').value;
            
            try {
                const response = await fetch('/pengeluaran', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        sumber,
                        jumlah: Number(jumlah),
                        kategori
                    })
                });
                
                if (response.ok) {
                    // Reset form
                    document.getElementById('formPengeluaran').reset();
                    
                    // Muat ulang data
                    loadPengeluaran();
                } else {
                    const errorData = await response.json();
                    alert(`Gagal menambahkan pengeluaran: ${errorData.message}`);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Terjadi kesalahan saat menambahkan pengeluaran');
            }
        }
    </script>
</body>
</html>